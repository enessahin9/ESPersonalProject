@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div>
	<div class="card">
		<div class="card-header text-white bg-danger bg-gradient">
			<span class="fs-4">Özgeçmiş</span>
			<a href="#" id="btnEkle" class="btn btn-warning ms-2">Özgeçmiş Ekle</a>
		</div>
		<div class="card-body">
			<table id="resumeTable" class="table table-bordered table-striped" style="width:100%">
				<thead>
					<tr>
						<th>#</th>
						<th>Kurum</th>
						<th>Başlangıç - Bitiş</th>
						<th>Açıklama</th>
						<th>Oluşturulma Tarihi</th>
						<th>İşlemler</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

<div class="modal fade" id="modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog"
	 aria-labelledby="modalTitleId" aria-hidden="true">
	<div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-md" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="modalTitle">Özgeçmiş Bölümü</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="container">
					<div class="mb-3">
						<label class="form-label">Kurum</label>
						<input type="text" id="txtName" class="form-control">
					</div>
					<div class="mb-3">
						<label class="form-label">Başlangıç - Bitiş</label>
						<input type="text" id="txtInterval" class="form-control">
					</div>
					<div class="mb-3">
						<label class="form-label">Açıklama</label>
						<textarea id="txtDescription" class="form-control"></textarea>
					</div>



				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
				<a href="#" id="btnSave" class="btn btn-primary">Kaydet</a>
			</div>
		</div>
	</div>
</div>

<script>
	$(document).ready(function () {
		$("#btnEkle").click(function () {
			$("#modalTitle").text("Özgeçmiş Bölümü");
			$("#btnSave").text("Kaydet").removeClass('btn-success').addClass('btn-primary');
			$("#txtName").val("");
			$("#txtInterval").val("");
			$("#txtDescription").val("");

			$("#modal").modal('show');
		});

		// Kaydet düğmesi tıklama olayı
		$("#btnSave").click(function () {
			var veri = {
				name: $("#txtName").val(),
				interval: $("#txtInterval").val(),
				description: $("#txtDescription").val(),
			};

			$.ajax({
				url: '/Admin/Resume/ResumeAdd',
				method: 'POST',
				data: veri,
				success: function (res) {
					$("#modal").modal('hide');
					$("#txtName").val("");
					$("#txtInterval").val("");
					$("#txtDescription").val("");
					$("#resumeTable").DataTable().ajax.reload();
				},
				error: function (error) {
					Swal.fire(
						'Hata!',
						'Veri kaydetme işlemi başarısız oldu. Hata: ' + error.statusText,
						'error'
					);
				}
			});
		});

		// Tablo
		var dataTable = $('#resumeTable').DataTable({
			ajax: {
				url: '/Admin/Resume/GetAll',
				dataSrc: ''
			},
			columns: [
				{ data: 'id' },
				{ data: 'name' },
				{ data: 'interval' },
				{ data: 'description' },
				{ data: 'dataCreated' },
				{
					data: null,
					render: function (data, type, row) {
						return `<a href="#" onclick="deleteResume(${row.id})" class="btn btn-sm btn-danger">Sil</a>
										<a href="#" onclick="editResume(${data.id})" class="btn btn-sm btn-primary">Düzenle</a>`;
					}
				}
			]
		});
	});

	function deleteResume(resumeId) {
		Swal.fire({
			title: 'Silmek istediğinize emin misiniz?',
			text: "Özgeçmiş Silinecek",
			icon: 'warning',
			showCancelButton: true,
			confirmButtonColor: '#3085d6',
			cancelButtonColor: '#d33',
			confirmButtonText: 'Sil!'
		}).then((result) => {
			if (result.isConfirmed) {
				$.ajax({
					url: '/Admin/Resume/ResumeDelete/' + resumeId,
					method: 'POST',
					success: function () {
						Swal.fire(
							'Başarılı!',
							'Özgeçmiş silindi.',
							'success'
						);
						$("#resumeTable").DataTable().ajax.reload();
					},
					error: function () {
						Swal.fire(
							'Hata!',
							'Özgeçmiş silinemedi.',
							'error'
						);
					}
				});
			}
		});
	}

</script>

