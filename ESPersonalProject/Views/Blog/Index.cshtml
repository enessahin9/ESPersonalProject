@model Models.BlogDetail
@{
	Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<title>Hagen - vcard template</title>
	<meta charset="UTF-8">
	<meta name="description" content="Hagen - vcard template">
	<meta name="keywords" content="personal, portfolio">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Favicon -->
	<link href="favicon.ico" rel="shortcut icon" type="image/x-icon" />

	<!-- Stylesheets -->
	<link rel="stylesheet" href="~/hagenclassic/assets/css/main.css" />



	<!-- Google Web fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">


	<!-- Font icons -->
	<link rel="stylesheet" href="icon-fonts/flat-icon/flaticon.css" />
	<link rel="stylesheet" href="icon-fonts/font-awesome/~/hagenclassic/assets/css/all.min.css" />

	<!--[if lt IE 9]>
	  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

</head>
<body class="scroll-animation-on">

	<!-- Preloader  -->
	<div id="loader" class="preloader">
		<div class="loading">
			<div class="profile-image">
				<img src="~/hagenclassic/assets/~/hagenclassic/assets/images/profile-loader.jpg" alt="">
				<svg style="position: absolute;" width="100px" height="100px" viewBox="0 0 100 100" preserveAspectRatio="none">
					<circle class="js-circle circle" cx="50" cy="50" r="48" stroke="white" stroke-width="2" fill="none" />
					<circle class="js-circle circletwo" cx="50" cy="50" r="48" stroke="white" stroke-width="2" fill="none" />
				</svg>
			</div>
		</div>
	</div>
	<!-- Preloader End -->


	<div class="page-cover">
		<div id="page-scroll">
			<div class="barba-wrapper" data-barba="wrapper">
				<main data-barba="container">
					<!-- Page Wrapper -->
					<div class="container">
						<div class="page-wrapper">

							<header id="fixed">
								<div class="hamburger hamburger--elastic">
									<span class="hamburger-box"> <span class="hamburger-inner"></span> </span>
								</div>
								<nav>
									<ul>
										<li><a href="index.html">Home</a></li>
										<li><a href="resume.html">Resume</a></li>
										<li><a href="portfolio.html">Portfolio</a></li>
										<li><a href="blog.html">Blog</a></li>
										<li><a href="contact.html">Contact</a></li>
									</ul>
								</nav>
							</header>

							<!-- ARTICLE BLOG
							================================================== -->
							<div class="single-blog">
								<!-- Page Caption -->
								<div class="single-post-metas">
									<div class="blog-date"> </div>
									<div class="categories">
										<a class="category" href="http://localhost:8888/Wp-starting-pack/category/uncategorized/" rel="category tag"><span data-hover="Uncategorized">Uncategorized</span></a>
									</div>
								</div>
								<div class="single-post-title">
									<h1 class="big-title">@Model.Name</h1>
								</div>
								<div class="spacer-45"></div>
								<!-- Image -->
								<div class="about-image clip-animation" data-delay="1" data-duration="2">
									<img src="@Model.ImageUrl" alt="">
								</div>
								<div class="spacer-45"></div>
								<!-- Article Text -->
								<div class="blog-entry scale-animation" data-delay="1" data-duration="2">
									@Model.Description
								</div>

								<!-- tags -->
								<div class="col-xl-12 scale-animation">
									<div class="tags">
										<i class="fas fa-tag"></i>
										<ul>
											<li><a href="#" data-cursor-type="big">Wordpress</a></li>
											<li><a href="#" data-cursor-type="big">Creative</a></li>
											<li><a href="#" data-cursor-type="big">Blog</a></li>
											<li><a href="#" data-cursor-type="big">Theme</a></li>
										</ul>
									</div>
								</div>

								<div class="spacer-60"></div>
								<!-- form -->
								<div id="contact-formular" class="col-xl-8 scale-animation">
									<h5 class="underline-title">Leave a message</h5>
									<div class="spacer-30"></div>
									<form method="post" name="contactform" id="contactform" class="row" autocomplete="off">
										<!-- name -->
										<div class="col-xl-6">
											<input type="text" style="display:none" />
											<input class="inp" name="name" type="text" placeholder="Name" id="name">
										</div>
										<!-- email -->
										<div class="col-xl-6">
											<input class="inp" name="email" type="text" placeholder="Email" id="email">
										</div>
										<!-- about project -->
										<div class="col-xl-12">
											<textarea class="inp" name="comments" id="comments" rows="3" placeholder="Message"></textarea>
										</div>
										<!-- button -->
										<div class="form-btn col-xl-12">
											<input class="site-btn" type="submit" value="Send">
										</div>
									</form>
								</div>






							</div> <!-- page wrapper end -->
						</div><!-- container -->
						<!-- FOOTER -->
						<footer>
							<div class="container">
								<div class="footer-inner">
									<div class="copyright">
										<p>Copyright 2022 - All right reserved</p>
									</div>
									<ul class="social">
										<li><a target="_blank" href="#">Facebook</a></li>
										<li><a target="_blank" href="#">Twitter</a></li>
										<li><a target="_blank" href="#">Instagram</a></li>
										<li><a target="_blank" href="#">Dribbble</a></li>
									</ul>
								</div>
							</div>
						</footer>
				</main>
			</div>
		</div>
	</div>
	<div class="bg-image" style="background-image: url(/hagenclassic/assets/images/backg.jpg);"></div>

	<!-- Javascripts -->
	<script src="~/hagenclassic/assets/js/jquery.js"></script>
	<script src="~/hagenclassic/assets/js/plugins.js"></script>
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB3gqyHylICdokv-P1q2WtRihCFhiFnm_U&sensor=false"></script>
	<script src="~/hagenclassic/assets/js/map.js"></script>
	<script src="~/hagenclassic/assets/js/main.js"></script>

</body>
</html>
