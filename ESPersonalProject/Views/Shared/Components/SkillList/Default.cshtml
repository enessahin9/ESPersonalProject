@model List<Skill>
@{
	Layout = null;
}

<div class="skills">
	<h5 class="underline-title classic-animation">Beceriler</h5>
	<div class="spacer-60"></div>

	<div class="row">
		<div class="col-xl-1 col-lg-1 col-md-1 col-sm-1 col-1 classic-animation" data-delay=".3">
			<h2 class="skills-category">DİLLER</h2>
		</div>
		<div class="col-xl-11 col-lg-11 col-md-11 col-sm-11 col-11">
			<div class="row">
				<div class="pie-chart col-xl-3 col-lg-3 col-md-3 col-sm-6 col-6 classic-animation"
					 data-delay=".5">
					<div class="chart" data-percent="100" data-scale-color="#ffb400">
						<span class="percent">100</span>
					</div>
					<div class="skills-description">
						<h6>Türkçe</h6>
					</div>
				</div>
				<div class="pie-chart col-xl-3 col-lg-3 col-md-3 col-sm-6 col-6 classic-animation"
					 data-delay=".6">
					<div class="chart" data-percent="50" data-scale-color="#ffb400">
						<span class="percent">50</span>
					</div>
					<div class="skills-description">
						<h6>İngilizce</h6>
					</div>
				</div>
				
				
			</div>
		</div>
	</div>
	<div class="spacer-45"></div>
	<hr>
	<div class="spacer-45"></div>


	@* ************************************** *@



	<div class="row">
		<div class="col-xl-1 col-lg-1 col-md-1 col-sm-1 col-1 classic-animation">
			<h2 class="skills-category">DESIGN</h2>
		</div>
		<div class="col-xl-5 col-lg-5 col-md-5 col-sm-11 col-11 classic-animation">
			<ul class="skill-list">
				@foreach (var skill in Model.Skip(Model.Count / 2))
				{
					<li>
						<div class="bar-info">
							<h3>@skill.Name</h3>
							<span>@skill.Value%</span>
						</div>
						<div class="progress">
							<div class="percentage" data-percent="@skill.Value%"></div>
						</div>
					</li>
				}
			</ul>
		</div>
		<div class="col-xl-1 col-lg-1 col-md-1 col-sm-1 col-1 classic-animation">
			<h2 class="skills-category">DESIGN</h2>
		</div>

		<div class="col-xl-5 col-lg-5 col-md-5 col-sm-11 col-11 classic-animation">
			<ul class="skill-list">
				@foreach (var skill in Model.Take(Model.Count / 2))
				{
					<li>
						<div class="bar-info">
							<h3>@skill.Name</h3>
							<span>@skill.Value%</span>
						</div>
						<div class="progress">
							<div class="percentage" data-percent="@skill.Value%"></div>
						</div>
					</li>
				}
			</ul>
		</div>
	</div>


</div>

